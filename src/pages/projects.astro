---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
projects.forEach((post) => {
  console.log(post.data.published);
});
const publishedProjects = projects.filter((project) => project.data.published);
interface Project {
  id: string;
  collection: string;
  data: {
    title: string;
    pubDate: Date;
    tags: string[];
    image: string;
    url?: string;
    external?: boolean;
  };
}
---

<Layout title="Work">
  <ul
    class="grid grid-cols-[repeat(auto-fit,minmax(min(100%,200px),1fr))] gap-x-4 gap-y-12"
  >
    {
      publishedProjects.map((project: Project) => {
        return (
          <a
            href={
              project.data.external
                ? project.data.url
                : `/projects/${project.id}`
            }
          >
            <li class="flex flex-col gap-2">
              <div class="relative aspect-[4/3] w-full overflow-hidden">
                <img
                  src={project.data.image}
                  alt={project.data.title}
                  class="absolute inset-0 object-cover w-full h-full"
                />
              </div>
              <div>
                <div class="flex items-center gap-2">
                  <h2>{project.data.title}</h2>
                  {"-"}
                  <span class="text-gray-500">
                    {new Date(project.data.pubDate).toLocaleDateString(
                      "en-US",
                      {
                        year: "numeric",
                      }
                    )}
                  </span>
                </div>

                <p class="text-gray-500">{project.data.tags.join(", ")}</p>
              </div>
            </li>
          </a>
        );
      })
    }
  </ul>
</Layout>
